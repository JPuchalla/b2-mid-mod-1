<h2> <%= @surgery.title %> </h2> <br>

<%= @surgery.operating_room_number %> <br>

<h2>Other surgeries happening this day of the week:</h2>
<% @surgery.same_day.each do |surgery| %>
<%= surgery.title %>
<% end  %> <br>


<%= link_to "Add A Doctor To This Surgery", "/surgeries/#{@surgery.id}" %>


<%= form_tag "/surgeries/#{@surgery.id}", method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag "Add Doctor to Surgery" %>
<% end %>
